<h1>Musings</h1>

<% @posts.each do |post| %>
	<p><%= link_to post.title, post %></p>
	<p><strong>Created at: </strong><%= post.created_at.localtime.strftime("%b. %-d, %Y - %-l:%M %P") %></p>
<% end %>

<%= link_to 'Compose a new post', new_post_path %>
<% if !current_user %>
	<%= link_to 'Admin Login', login_path %>
<% end %>
<% if current_user %>
	<%= link_to 'Log Out', logout_path, method: :delete %>
<% end %>

