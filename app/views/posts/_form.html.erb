<%= form_for @post do |f| %>
<div class="form">
	<div class="form-group">
		<%= f.label "Title:", class: "control-label" %>
		<%= f.text_field :title, class: "form-control" %>
	</div><br>
	<div class="form-group">
		<%= f.label "Body:", class: "control-label" %>
		<%= f.text_area :body, class: "form-control" %>
	</div><br>
	<div>
		<%= f.submit :class => 'btn btn-success' %>
	</div>
</div>
<% end %>