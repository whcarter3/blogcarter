<h1>Sign Up</h1>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul> 
<%= form_for @user do |f| -%>
  <div>
  	<%= f.label :name, "Name:" %>
  	<%= f.text_field :name %>
  </div>
  <div>
  	<%= f.label :email, "Email:" %>
  	<%= f.text_field :email %>
  </div>
  <div>
  	<%= f.label :password, "Password:" %>
  	<%= f.password_field :password %>
  </div>
  <div>
  <div>
    <%= f.label :password_confirmation, "Confirm Password:" %>
    <%= f.password_field :password_confirmation %>
  </div>
  	<%= f.submit 'Sign Up' %>
  </div>
<% end %>
